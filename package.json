{
    "name": "Simple Web UI Builder",
    "version": "1.0.0",
    "description": "JSON based declarative UI builder",
    "scripts": {
        "test": "karma start",
        "": "webpack",
        "grunt": "grunt",
        "build-styles": "sass src/scss:../app/web/styles/admin",
        "watch-styles": "sass --watch src/scss:../app/web/styles/admin",
        "build-components": "browserify ./built/node_modules/ui/build/build.js -o ../app/web/index.js",
        "watch-components": "watchify ./built/node_modules/ui/build/build.js -o ../app/web/index.js --verbose",
        "dev": "concurrently --kill-others \"npm run watch-components\" \"npm run watch-styles\" \"npm test\""
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@timkendrick/monaco-editor": "0.0.7",
        "autobahn": "^18.3.2",
        "bootstrap": "^5.1.3",
        "es6-promise-promise": "^1.0.0",
        "grunt": "^1.1.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-cssmin": "^2.2.0",
        "grunt-contrib-uglify": "^2.3.0",
        "handlebars": "^4.7.7",
        "jquery": "^3.5.0",
        "less": "^4.1.2",
        "marked": "^4.0.14",
        "moment": "^2.29.2",
        "systemjs": "^0.20.12",
        "typescript": "^2.9.2",
        "validate.js": "^0.12.0"
    },
    "devDependencies": {
        "@types/jquery": "^3.5.14",
        "@types/node": "^17.0.24",
        "autoprefixer": "^10.4.4",
        "concurrently": "^7.3.0",
        "css-loader": "^6.7.1",
        "jasmine-core": "^4.1.0",
        "karma": "^6.3.18",
        "karma-chrome-launcher": "^3.1.1",
        "karma-jasmine": "^5.0.0",
        "karma-mocha": "^2.0.1",
        "mocha": "^9.2.2",
        "postcss": "^8.4.12",
        "postcss-loader": "^6.2.1",
        "sass": "^1.49.10",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "webpack": "^5.71.0"
    }
}
